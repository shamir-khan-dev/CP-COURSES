# Imports
import string

def total_wins():
    """
    -------------------------------------------------------
    returns two numbers representing how many times the string "purple" appeared in the input and how many times the string "gold" appeared in the input.
    Use: result = total_wins()
    -------------------------------------------------------
    Parameters:

    Returns:
        amount of purple and gold - (int)
    ------------------------------------------------------
    """
    
    purple_total = 0
    
    gold_total = 0
    
    user_choice = input("Enter the winning team: ")
    
    while(user_choice != ""):
        
        if(user_choice == "purple"):
            purple_total+=1
        elif(user_choice == "gold"):
            gold_total+=1
        
        user_choice = input("Enter the winning team: ")   
    
    return purple_total,gold_total

def detect_prime(number):
    """
    -------------------------------------------------------
    Determines if number is a prime number.
    Use: prime = detect_prime(number)
    -------------------------------------------------------
    Parameters:
        number - an integer (int > 1)
    Returns:
        prime - True if number is prime, False otherwise (bool)
    ------------------------------------------------------
    """
    
    status = True
    
    while(number >1):
        
        if(number%2 == 0):
            status = False
            break 
        else:
            status = True
            break
    
    return status

def interest_table(principal_amount, interest_rate, payment):
    """
    -------------------------------------------------------
    Prints a table of monthly interest and payments on a loan.
    Use: interest_table(principal_amount, interest_rate, payment)
    -------------------------------------------------------
    Parameters:
        principal_amount - original value of a loan (float > 0)
        interest_rate - yearly interest interest_rate as a % (float >= 0)
        payment - the monthly payment (float > 0)
    Returns:
        None
    ------------------------------------------------------
    """
    
    print(f"""Principal: ${principal_amount:.2f}
Interest Rate: {interest_rate:.2f}%
Monthly Payment: ${payment:.2f}
----------------------------------
Month Interest   Payment   Balance
----------------------------------""")
    
    INTERESTRATE = float((interest_rate/100)/12)
    
    balance = float(principal_amount)
    
    pay = float(payment)
   
    month = 1
    
    while(balance!= 0):
    
        interest = round(float(balance * INTERESTRATE),2) 
        if(pay > balance):
           pay = round(balance + interest,2)
           balance = 0
        else:
           pay = round(pay,2)
           balance = round(balance - (interest + pay),2)
        print(f"{month:>5} {interest:>8.2f} {pay:>9.2f} {balance:>9.2f}")
        month+=1
    
    return None 

def count_of_digits(number):
    """
    -------------------------------------------------------
    Counts the number of digits in an integer.
    Use: digits = count_of_digits(number)
    -------------------------------------------------------
    Parameters:
        number - an integer (int)
    Returns:
        digits - the number of digits in number (int)
    ------------------------------------------------------
    """
    if(number<0):
        number = number*-1
    else:
        number = number
    division = number
    total = 0
    while (division != 0):
        total+=1
        division =  division//10
    return total
        
def factor_summation(number):
    """
    -------------------------------------------------------
    Determines the sum of factors of an integer not including
    the integer itself. An integer's factors are the whole numbers
    that the integer can be evenly divided by.
    Use: total = factor_summation(number)
    -------------------------------------------------------
    Parameters:
        number - a positive integer (int >= 1)
    Returns:
        total - the total of number's factors (int)
    ------------------------------------------------------
    """
    divison = number -1
    total = 0
    while(divison>0):
        if(number%divison == 0):
            total +=1
        divison-=1
    return total
            
            
            
       

        
        